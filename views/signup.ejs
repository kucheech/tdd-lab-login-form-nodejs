<%- include('partials/header', {title: locals.title})-%>

<div class="col-sm-12 col-md-6 offset-md-3">
  <h2>Signup for an account</h2>

  <% if (typeof successMsg != "undefined") { %>
    <div class="alert alert-success" role="alert"><%= successMsg %></div>
  <% } %>
  <% if (typeof errorMsg != "undefined") { %>
    <div class="alert alert-danger" role="alert"><%= errorMsg %></div>
  <% } %>

  <div class="card">
    <div class="card-body">
      <form action="/signup" method="post">
        <div class="form-group">
          <label for="inputUsername">Username</label>
          <input class="form-control" id="inputUsername" type="text" name="username" value="<%= username %>"/>
        </div>
        <div class="form-group">
          <label for="inputPassword1">Password</label>
          <input class="form-control" id="inputPassword1" type="password" name="password" />
        </div>
        <div class="form-group">
          <label for="inputPassword2">Confirm Password</label>
          <input class="form-control" id="inputPassword2" type="password" aria-describedby="confirmPasswordHelp" name="password_confirm" />
          <small class="form-text text-muted" id="confirmPasswordHelp">Please confirm your password</small>
        </div>
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input class="form-control" id="exampleInputEmail1" type="email" aria-describedby="emailHelp" name="email" value="<%= email %>" />
          <small class="form-text text-muted" id="emailHelp">We'll never share your email with anyone else.</small>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer')-%>